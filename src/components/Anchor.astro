---
interface Props {
  data_tipo?: string;
  id?: string;
  url: string;
  clase: string;
  texto: string;
}

const { url, clase, texto, ...rest } = Astro.props;
---

<a href={url} class:list={[clase,  'btn']} {...rest} set:html={texto} {...rest} >
<slot />
</a>

<style lang="scss">
  @use "/src/estilos/variables.scss" as *;

  @mixin anchor {
    display: inline-block;
    padding: 0.5rem 1rem;
    text-align: center;
    max-width: fit-content;
    border-radius: .9rem;
    font-weight: bold;
    margin-top: 1.5rem;
   
    @extend .anime;
  }

  .btn {
    @include anchor;
  }
  .claro {

    background: $azulmarino;
    color: white;
    &:hover {
        color: white;
      background: $naranja;
      @extend .sombra;
    }
  }
  .reservar{
    margin: 0 auto;
  }
  .oscuro {
    border: none;
    background: $amarillo;
    color: $azulmarino;
    &:hover {
      color: white;
      background: $azul;
      @extend .sombra;
    }
  }
</style>
