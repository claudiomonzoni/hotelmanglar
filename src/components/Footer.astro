<style lang="scss">
  @use "/src/estilos/variables.scss" as *;

  footer {
    display: flex;
    background-color: $azulmarino;
    color: #fff;
    text-align: center;
    border-radius: 1rem;
    margin-bottom: 2rem;
  }
  .numero {
    font-weight: bold;
    font-size: clamp(1rem, 1.7rem, 2.2rem);
  }
  a {
    color: $fondoamarillo;
  }
  li {
    padding: 0;
    list-style: none;
    margin: 0rem 0rem 0.3rem 0rem;
  }
  .izq {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1 0 40%;
    padding: 2rem;
  }
  .der {
    border-radius: 1rem;
    flex: 1 0 60%;
    padding: 2rem;
    background: $naranja;
    text-align: left;
  }
  @include cel {
    footer {
      flex-wrap: wrap;
      margin: 2rem;
      .izq,
      .der {
        flex: 1 0 100%;
      }
    }
  }
</style>

<script>
  const anio = document.getElementById("anio");
  if (anio) {
    anio.textContent = new Date().getFullYear().toString();
  }
</script>
